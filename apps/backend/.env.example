# Database (PostgreSQL with PostGIS)
# These values match the Docker container defaults from docker-services.sh
DATABASE_URL=postgresql://postgres:password@localhost:5432/socio_dev

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Server
PORT=3000
NODE_ENV=development

# CORS - comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:19000

# =============================================================================
# AWS Configuration (Optional - for production deployment)
# =============================================================================

# AWS Credentials (leave empty to use IAM roles in AWS environment)
# For local development, configure via `aws configure` CLI instead
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS Region - Tel Aviv
AWS_REGION=il-central-1

# S3 Configuration
# Bucket name from Terraform output: terraform output media_bucket_id
AWS_S3_BUCKET=

# CloudFront Configuration
# CloudFront URL from Terraform output: terraform output cloudfront_url
AWS_CLOUDFRONT_URL=

# Secrets Manager Configuration
# Database credentials secret ARN from Terraform output: terraform output db_credentials_secret_arn
# When set, the application can retrieve database credentials from Secrets Manager
AWS_SECRETS_DB_ARN=

# =============================================================================
# Google OAuth Configuration
# =============================================================================

# Google Cloud Console: https://console.cloud.google.com/apis/credentials
# Required for Google Sign-In on mobile and web
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# Apple Sign-In Configuration
# =============================================================================

# Apple Developer Console: https://developer.apple.com/account/resources/identifiers
# Required for Sign in with Apple on mobile and web
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
# Private key contents - replace newlines with \n for single line
APPLE_PRIVATE_KEY=

# =============================================================================
# 100ms Configuration (Voice/Video Calls)
# =============================================================================

HMS_ACCESS_KEY=
HMS_SECRET=
HMS_TEMPLATE_ID=

# =============================================================================
# Twilio Configuration (Phone Verification)
# =============================================================================

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
