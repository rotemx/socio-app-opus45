{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/config/typescript/react-native.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@socio/shared": ["../../packages/shared/src"],
      "@socio/shared/*": ["../../packages/shared/src/*"],
      "@socio/ui": ["../../packages/ui/src"],
      "@socio/ui/*": ["../../packages/ui/src/*"],
      "@socio/types": ["../../packages/types/src"],
      "@socio/types/*": ["../../packages/types/src/*"]
    },
    "types": ["react-native", "nativewind/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
