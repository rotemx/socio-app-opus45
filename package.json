{
  "name": "socio",
  "version": "1.0.0",
  "private": true,
  "description": "Location-based chat room discovery platform for the Tel Aviv LGBT community",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",

    "lint:fix": "turbo lint:fix",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "docker:start": "pnpm --filter=@socio/backend docker:start",
    "docker:stop": "pnpm --filter=@socio/backend docker:stop",
    "docker:status": "pnpm --filter=@socio/backend docker:status",
    "docker:clean": "pnpm --filter=@socio/backend docker:clean"
  },
  "keywords": [
    "chat",
    "location-based",
    "monorepo",
    "turborepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.7.4",
    "typescript": "^5.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2"
  }
}
