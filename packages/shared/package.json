{
  "name": "@socio/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared business logic for Socio applications",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./stores/*": "./src/stores/*",
    "./hooks/*": "./src/hooks/*",
    "./services/*": "./src/services/*",
    "./utils/*": "./src/utils/*"
  },
  "scripts": {
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@socio/types": "workspace:*",
    "@tanstack/react-query": "^5.60.0",
    "socket.io-client": "^4.8.0",
    "zod": "^3.25.76",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
